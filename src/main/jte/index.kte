@import de.sam.base.pages.IndexPage

@param page: IndexPage

@template.layout.page(
page = page,
content = @`
    <h1>Hello World</h1>
    <p>This is a simple example of a JTE page.</p>
    <a class="ui green button">Buttons also work :D</a>
    <p>${page.config.name}</p>
    <div class="ui segment">
        <p>The first user is: ${page.firstUserDAO.name}, they registered
            on ${page.firstUserDAO.registrationDate.toLocalDate().toString()}</p>
    </div>
`
)

